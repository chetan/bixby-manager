
JOB:          <%= @command_name %><% if @command_name != @script then %>
SCRIPT:       <%= @script %><% end %>
RUN ID:       <%= @scheduled_command.run_count %><% if @scheduled_command.cron? then %>
NEXT RUN:     <%= @scheduled_command.scheduled_at.strftime("%m/%d/%Y %H:%M:%S") %><% end %>
STATUS:       <%= @logs.count{ |l| l.success? } %>/<%= @logs.size %> HOSTS SUCCEEDED
START TIME:   <%= @time_start.strftime("%m/%d/%Y %H:%M:%S") %>
ELAPSED TIME: <%= total_time_taken() %>
ARGS:         <%= @scheduled_command.args ? @scheduled_command.args : "n/a" %>
ENV:          <%= env() %>
STDIN:        <%= stdin() %>

<% @logs.each do |log| %>
HOST: <%= log.agent.host.name %>
===========================================================

TIME:         <%= log.requested_at.strftime("%m/%d/%Y %H:%M:%S") %>
ELAPSED TIME: <%= log.time_taken_str %>
EXIT CODE:    <%= log.status %> (<%= log.success? ? "success" : "error" %>)
OWNER:        <%= log.user ? log.user.display_name : "n/a" %>

<%= out(log, :stdout) %>

<%= out(log, :stderr) %>

<% end %>
