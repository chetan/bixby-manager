!!! 1.1
%html{ :lang => I18n.locale }
  %head
    %title BIXBY
    %meta{ "name" => "referrer", "content" => "never" }
    %meta{ "bixby-version" => Bixby.ref, "date" => Bixby.ref_date }
    = csrf_meta_tags
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"

  %body
    %div#body
      -# main content (JS layout) will go here

    - if not @bootstrap.blank?
      = render(:partial => "layouts/bootstrap", :locals => { :bootstrap => @bootstrap })
