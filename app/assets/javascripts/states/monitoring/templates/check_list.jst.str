
<h3>Metrics for <%= host.name() %></h3>

<p>
  <!-- TODO: this is duped at bottom of page. only show when that is not visible -->
  <button type="button" class="btn btn-primary add_check" host_id="<%= host.get('id') %>">Add Check</button>
  <button type="button" class="btn btn-primary add_trigger" host_id="<%= host.get('id') %>">Add Trigger</button>
</p>

<h3>Checks</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Arguments</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
	 <%= each_partial(checks, "check", _bvm.CheckTableRow) %>
  </tbody>
</table>

<% if (checks.length == 0) { %>

  <p>No checks have been configured</p>

<%
} else {
  __out__ += each_partial(checks, "check", _bvm.Check)
}
%>

<br />
<p>
  <button type="button" class="btn btn-primary add_check" host_id="<%= host.get('id') %>">Add Check</button>
  <button type="button" class="btn btn-primary add_trigger" host_id="<%= host.get('id') %>">Add Trigger</button>
</p>
