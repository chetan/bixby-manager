
<div class="form-group">
  <label for="runhost" class="control-label">Run check from host</label>
  <div class="controls">
    <select name="runhost" id="runhost">

      <% hosts.each(function(h) { %>
      <option value="<%= h.id %>"><%= h.name() %><%? host %><%? host.id == h.id %> [this host]<%/%><%/%></option>
      <% }); %>

    </select>
  </div>
</div>
