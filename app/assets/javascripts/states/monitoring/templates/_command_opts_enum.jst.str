
<div class="control-group">
  <label for="<%= opt_key %>" class="control-label"><%= opt_key %></label>
  <div class="controls">
    <select name="<%= opt_key %>" id="<%= opt_key %>">

      <% _.each(opt_hash["values"], function(v, k) { %>
      <option value="<%= v %>"><%= v %></option>
      <% }); %>

    </select>
  </div>
</div>
