
<% if (new_hosts.length) { %>
<h2>New hosts</h2>
<div class="new_host_list"></div>
<% } %>

<% if (other_hosts.length) { %>
<h2>All hosts</h2>
<button class="btn add_host" type="button">Add Host</button>
